/* pages/location/location.wxss */

.top-search {
  padding: 30rpx 30rpx;
  position: relative;
}

.top-search input {
  background-color: #f5f5f5;
  border-radius: 35rpx;
  height: 70rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  color: #999;
}

.top-search image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 60rpx;
  margin: auto 0;
  z-index: 1;
}

.xtitle {
  display: flex;
  font-size: 32rpx;
  color: #666;
  justify-content: space-between;
  margin: 30rpx 30rpx
}

.hot-grid{
  display: grid;
  grid-template-columns: auto auto auto
}

.hot-grid text{
  text-align: center
}