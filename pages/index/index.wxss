.loadding-view {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.temp {
  font-size: 200rpx;
  opacity: 0.8;
  text-align: center;
  line-height: 280rpx;
}

.temp-c {
  position: absolute;
  top: 50rpx;
  right: 160rpx;
  font-size: 120rpx;
  opacity: 0.8;
  text-align: center;
  line-height: 280rpx;
}

.weather {
  font-size: 40rpx;
  text-align: center;
  opacity: 0.65;
}

.weather-wrapper {
  position: relative;
  width: 750rpx;
  padding-top: 20rpx;
  padding-bottom: 250rpx;
  background-image: image("/images/overcast-bg.png");
}

.weather-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.publish-time {
  position: absolute;
  bottom: 5rpx;
  right: 30rpx;
  font-size: 22rpx;
  color: #666;
}

.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
}

.timetips-icon {
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.forecast-list {
  display: flex;
}

.forecast-item {
  width: 146rpx;
  height: 260rpx;
  /* 当宽度超出屏幕时不进行压缩 */
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.forecast-time {
  font-size: 22rpx;
  line-height: 42rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}

.forecast-weather {
  margin-top: 10rpx;
  width: 60rpx;
  height: 60rpx;
}

.forecast-temp {
  margin-top: 15rpx;
  font-size: 32rpx;
  line-height: 56rpx;
}

.day-weather {
  height: 90rpx;
  display: flex;
  position: absolute;
  bottom: 0;
  flex-direction: row;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  right: 40rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  left: 40rpx;
  opacity: 0.5;
  align-items: center;
}

.temp-text {
  /* 权重1 */
  flex-grow: 1;
  text-align: right;
  padding-right: 30rpx;
}

.arrow-icon {
  width: 13rpx;
  height: 24rpx;
}

/*位置*/

.location-wrapper {
  font-size: 30rpx;
  line-height: 42rpx;
  margin-bottom: 60rpx;
  color: rgba(0, 0, 0, 0.5) !important;
  border: none !important;
  padding: 0 !important;
}

.location-icon {
  width: 21rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.location {
  display: flex;
  align-items: center;
  justify-content: center;
}

.location-tips {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  justify-content: center;
  height: 42rpx;
}

/* 七天内数据 */

.daily-forecast-container {
  display: flex;
}

.item-daily-fotecast {
  width: 200rpx;
  height: 260rpx;
  /* 当宽度超出屏幕时不进行压缩 */
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.daily-image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 6rpx;
}

/*
生活指数
*/

.life-swiper {
  height: 380rpx;
  margin-top: 30rpx;
}

.life-container {
  display: grid;
  grid-template-columns: 185rpx 186rpx 185rpx 186rpx;
  background-color: #ddd;
  grid-gap: 2rpx;
  padding: 2rpx;
}

.life-item {
  height: 186rpx;
  text-align: center;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.life-item image {
  width: 42rpx;
  height: 42rpx;
  margin-bottom: 10rpx;
}

.life-brf {
  font-size: 28rpx;
  color: #333;
}

.life-type {
  font-size: 24rpx;
  color: #999;
}

.bottom-nav {
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item-bottom-nav {
  width: 22rpx;
  height: 6rpx;
  background-color: #ddd;
  margin: 5rpx;
}

.bottom-link {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 50rpx;
  margin-top: 30rpx;
}

.bottom-link-item {
  font-size: 20rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background-color: #f5f5f5
}
.bottom-link-item::after {
  border: none;
}
.bottom-link image {
  width: 32rpx;
  height: 32rpx;
  margin: 8rpx;
}
