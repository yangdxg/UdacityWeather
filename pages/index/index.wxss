.temp {
  font-size: 200rpx;
  opacity: 0.8;
  text-align: center;
  line-height: 280rpx;
}
.weather{
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  opacity: 0.65
}
.weather-wrapper{
  position: relative;
  width: 750rpx;
  padding-top: 174rpx;
  padding-bottom: 250rpx
}
.weather-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1
}
.timetips{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 25rpx;
  margin-bottom: 25rpx
}
.timetips-icon{
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx
}
.timetips-text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5
}
.forecast-list{
  display: flex
}
.forecast-item{
  width: 120rpx;
  /* 当宽度超出屏幕时不进行压缩 */
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.forecast-time{
  font-size: 30rpx;
  line-height: 42rpx;
}
.forecast-weather{
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}
.forecast-temp{
  margin-top: 46rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}
.day-weather{
  height: 90rpx;
  display: flex;
  position: absolute;
  bottom: 0;
  flex-direction: row;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  right: 40rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  left: 40rpx;
  opacity: 0.5;
  align-items: center
}
.temp-text{
  /* 权重1 */
  flex-grow: 1;
  text-align: right;
  padding-right: 30rpx
}
.arrow-icon{
  width: 13rpx;
  height: 24rpx
}